<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CTFgame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CTFgame.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CTFgame.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CTFgame.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TimePickerTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@color/primary</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:buttonBarButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>