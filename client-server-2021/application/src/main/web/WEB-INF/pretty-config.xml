<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="root">
        <pattern value="/"/>
        <view-id value="/index.xhtml"/>
    </url-mapping>

    <url-mapping id="profile">
        <pattern value="/profile"/>
        <view-id value="/views/profile.xhtml"/>
    </url-mapping>

    <url-mapping id="publicProfile">
        <pattern value="/profile/#{id}"/>
        <view-id value="/views/publicProfile.xhtml"/>
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/views/login.xhtml"/>
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register"/>
        <view-id value="/views/register.xhtml"/>
    </url-mapping>

    <url-mapping id="verification">
        <pattern value="/verify"/>
        <view-id value="/views/verification.xhtml"/>
    </url-mapping>

    <url-mapping id="admin">
        <pattern value="/admin"/>
        <view-id value="/views/admin.xhtml"/>
    </url-mapping>
</pretty-config>
